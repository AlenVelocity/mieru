{
    "compilerOptions": {
      "target": "es6",
      "lib": [
        "ESNext"
      ],                         
      "module": "commonjs",
      "declaration": true,                     
      "outDir": "./dist",                        
      "resolveJsonModule": true,
      "strict": true,                           
      "esModuleInterop": true,                  
      "skipLibCheck": true,                     
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "paths": {
        "@packages/*": ["packages/*"]
      }
    },
    "exclude": [
      "node_modules"
    ]
  }